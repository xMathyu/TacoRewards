# Environment Configuration
# Copy this file to .env and fill in your actual values

# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/tacobot
# For MongoDB Atlas (cloud): mongodb+srv://username:password@cluster.mongodb.net/tacobot

# Bot Settings
PREFIX=!
MAX_DAILY_TACOS=5
ENABLE_ACHIEVEMENTS=true
ENABLE_LEADERBOARDS=true

# Logging Configuration
LOG_LEVEL=info
# Options: error, warn, info, verbose, debug

# Server Configuration
PORT=3000
NODE_ENV=development
# Options: development, production, test

# Feature Toggles
ENABLE_BETA_FEATURES=false
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=50

# Admin Configuration
ADMIN_USER_IDS=123456789012345678,987654321098765432
# Comma-separated list of Discord user IDs

# External Services (Optional)
WEBHOOK_URL=
SENTRY_DSN=
ANALYTICS_API_KEY=
